{
  "extends": "eslint:recommended",

  "root": true,

  "parserOptions": {
    "sourceType": "module"
  },

  "env": {
    "node": true,
    "es6": true
  },

  "rules": {
    "generator-star-spacing": 0,
    "no-console": "off",
    "require-jsdoc": "warn",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": ["error", "always"],
    "no-unused-vars": ["error"],
    "valid-jsdoc": [
      "warn",
      {
        "requireReturn": false,
        "prefer": {
          "return": "returns"
        }
      }
    ]
  }
}
